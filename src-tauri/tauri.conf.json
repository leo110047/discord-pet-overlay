{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Discord Pet Overlay",
  "version": "1.0.0",
  "identifier": "com.discord-pet-overlay.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Discord Pet Overlay",
        "url": "/",
        "width": 1920,
        "height": 200,
        "x": 0,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": false
      },
      {
        "label": "settings",
        "title": "設定 - Discord Pet Overlay",
        "url": "/settings.html",
        "width": 400,
        "height": 600,
        "resizable": true,
        "minWidth": 360,
        "minHeight": 400,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": false,
        "focus": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
